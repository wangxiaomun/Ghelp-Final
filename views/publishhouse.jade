doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title MicroG-Help
    meta(name='description', content='MicroGHelp')
    // Latest compiled and minified CSS
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css')
    // Optional theme
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css')
    style.
      .input-group-addon {
      min-width:200px;
      text-align:left;
      }
  body
    header
      .nvbar.navbar-inverse.navbar-fixed-top
        .container
          .nvbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='#')
              .text-primary G-Help
            a.navbar-brand(href='#')
              .text-primary Home Page
          #navbar.navbar-collapse.collapse
            form.navbar-form.navbar-right(action='/Logoff', method='get')
               button.btn.btn-success(type='submit') Log off
      .jumbotron
        .container
          .text-primary
            h2 Welcome to G-Help
    .container
      .row
        
        .col-md-8.col-sm-offset-2
          .well
            legend
              .text-primary
                h2 Personal Information
               
            form.basic(role='form',action='/hostpublish', method='post')
              .form-group
                .input-group.input-group-lg
                  span.input-group-addon Start From:
                  input.form-control(type='date',  name='startdate')
              .form-group
                .input-group.input-group-lg
                  span.input-group-addon Price (by Month):
                  input.form-control(type='number',  name='price')
              .form-group
                .input-group.input-group-lg
                  span.input-group-addon Host Name:
                  input.form-control(type='text', name='HostName')
              .form-group
                .input-group.input-group-lg
                  span.input-group-addon Room Amount:
                  input.form-control(type='number', name='RoomAmount')
              .form-group
                .input-group.input-group-lg
                  span.input-group-addon Current Avaliable:
                  input.form-control(type='number', name='Avaliable')
              .form-group
                .input-group.input-group-lg
                  span.input-group-addon Address:
                  input.form-control(type='text', name='Address')
              
              .form-group
                button#SAVE.btn.btn-success.center-block(name='SAVE',type='submit') Publish
                br
                button#CANCEL.btn.btn-warning.center-block(name='CANCEL') Cancel
           
    footer
