doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title MicroG-Help
    meta(name='description', content='MicroGHelp')
    // Latest compiled and minified CSS
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css')
    // Optional theme
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css')
    style.
      .input-group-addon {
      min-width:150px;
      text-align:left;
      }
  body
    header
      .nvbar.navbar-inverse.navbar-fixed-top
        .container
          .nvbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='#')
              .text-primary G-Help
            a.navbar-brand(href='#')
              .text-primary Home Page
          #navbar.navbar-collapse.collapse
            form.navbar-form.navbar-right(action='/Logoff', method='get')
               button.btn.btn-success(type='submit') Log off
      .jumbotron
        .container
          .text-primary
            h2 Welcome to G-Help
    .container
      .row
        
        .col-md-8.col-sm-offset-2
          .well
            legend
              .text-primary
                h2 Personal Information
                include alert.jade
            form.basic(role='form',action='/update', method='post')
              .form-group
                .input-group.input-group-lg
                  span.input-group-addon Student ID:
                  input.form-control(type='text', placeholder='It is no required for host family', name='studentID')
              .form-group
                .input-group.input-group-lg
                  span.input-group-addon First Name:
                  input.form-control(type='text', placeholder='Your First Name', name='firstname')
              .form-group
                .input-group.input-group-lg
                  span.input-group-addon Last Name:
                  input.form-control(type='text', placeholder='Your Last Name', name='Lastname')
              .form-group
                .input-group.input-group-lg
                  span.input-group-addon Email:
                  input.form-control(type='text', placeholder='example@gmail.com', name='Email')
              .form-group
                .input-group.input-group-lg
                  span.input-group-addon Address:
                  input.form-control(type='text', placeholder='', name='Address')
              .form-group
                .input-group.input-group-lg
                  span.input-group-addon Telephone:
                  input.form-control(type='tel', placeholder='Your phone number', name='phone')
              .form-group
                label.radio-inline
                  input(type='radio', name='options' value="student")
                  | New Student
                label.radio-inline
                  input(type='radio', name='options' value="mentor")
                  | Mentor
                label.radio-inline
                  input(type='radio', name='options' value="Host")
                  | Host Family
              .form-group
                button#SAVE.btn.btn-success.center-block(name='SAVE',type='submit') Save changes
                br
                button#CANCEL.btn.btn-warning.center-block(name='CANCEL') Cancel
           
    footer
      .container
        hr
        p
          small
            a(href='http://facebook.com/') Link us
            | On faceboook
        p Copyright ? Xiao Wang, 2015
        p wangxiaomun@gmail.com
