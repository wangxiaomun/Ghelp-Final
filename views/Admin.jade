doctype html
html(lang='en')
  meta(name='viewport', content='width=device-width, initial-scale=1')
  head
    meta(charset='utf-8')
    title MicroG-Help
        
        
    meta(name='description', content='MicroGHelp')
    // Latest compiled and minified CSS
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css')
    // Optional theme
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css')
  body
    header
      .nvbar.navbar-inverse.navbar-fixed-top
        .container
          .nvbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='#')
              .text-primary G-Help
            a.navbar-brand(href='#')
              .text-primary Home Page
          #navbar.navbar-collapse.collapse
            form.navbar-form.navbar-right(action='/Logoff', method='get')
               button.btn.btn-success(type='submit') Log off
      .jumbotron
        .container
          .text-primary
            h1
              strong Welcome to G-Help
    .container
      
        #container
          form.form-horizontal
            fieldset
              html
                head
                  meta(name='viewport', content='width=device-width, initial-scale=1')
                  link(rel='stylesheet', href='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css')
                  script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
                  script(src='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js')

  body

    .container
      h2 Received requests from students:
      h3 Requests for mentors:
      form#approveMentor(action='/ApplyMentor', method='post')
       .table-responsive
            table.table
              thead
                tr
                            th ID
                            th First Name
                            th Last Name
                            th Address
                            th Email

              - each item in mentorRows
                tr
                            td= item.ID
                            td= item.FirstNAME
                            td= item.LastNAME
                            td= item.Address
                            td= item.EMAIL				  
      form(action="/approveMentor", method='post',id='assigning', role='form' )
       label  Please Choose the Student's ID:
        br
        select.table#selectStudent(placeholder="select", name="mentee" required=true,style="width:100px")
          - each item in mentorRows
            option(value= "#{item.ID}") #{item.ID}
        input(type="submit", id='assign', value="Approve Request")